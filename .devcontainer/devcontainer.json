{
  "name": "Multi-SDK Dev Container",
  "build": 
  {
    "dockerfile": "./dockerfile"
  },
  "features": {
    
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "9.0"
    }
    // "ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire": "1.0.0"
    // "ghcr.io/devcontainers/features/dotnet:2": {
    //   "version": "1.0.0"
    // },
    // "ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {
    //   "version": "1.0.0"
    // },
    // "ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {
    //   "version": "1.0.0"
    // }
  

   
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-bicep",
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.azurecli",
        "dbaeumer.vscode-eslint"
              ],
        "settings": {
                "editor.autoSave": "onFocusChange",
                "editor.formatOnSave": true
              }
    }
  },
  "remoteUser": "vscode",
  
"postCreateCommand": "sudo chmod +x ./.devcontainer/setup.sh && sudo ./.devcontainer/setup.sh"

}
